{
  "compilerOptions": {
    "module": "ESNext",       // Use ESNext module system
    "target": "ESNext",       // Use ESNext for modern JavaScript
    "outDir": "./dist",       // Directory to output compiled files
    "esModuleInterop": true,  // Enables interoperability between CommonJS and ES Modules
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"]
}